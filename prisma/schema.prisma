generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  
  passwordHash String
  createdAt    DateTime @default(now())
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  code      String
  createdAt DateTime @default(now())
}
